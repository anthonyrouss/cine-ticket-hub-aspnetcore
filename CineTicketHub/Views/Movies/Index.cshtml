@model IEnumerable<CineTicketHub.Models.Entities.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = User.IsInRole("ADMIN");
    var isContentManager = User.IsInRole("CONTENT_MANAGER");
}

<div class="container">
    <h2 class="mt-4 mb-4">Movies</h2>

    <div class="row">
        
        @foreach (var movie in Model)
        {
            <!-- Movie -->
            <div class="col-md-2 mb-4">
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="card-link text-decoration-none text-black">
                    <div class="card d-flex flex-column">
                        <img src="@movie.PosterUrl" class="card-img-top img-fluid" alt="@movie.Title Poster" style="width: 100%">
                        <div class="card-body flex-grow-1">
                            <h6 class="card-title">@movie.Title (@movie.ReleaseDate.Year)</h6>
                            <div class="card-text">
                                @foreach (var genre in movie.Genres)
                                {
                                    <span class="badge bg-secondary">@genre.Name</span>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@if (isAdmin || isContentManager)
{
    <div class="dropup position-absolute end-0 rounded-circle m-5" style="z-index: 1000; top: 4%">
        <a asp-controller="Movies" asp-action="Create" class="btn btn-primary btn-lg hide-toggle" style="font-size: 1rem;">
            Add Movie
        </a>
    </div>
}


