<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CineTicketHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("ADMIN"))
                            {
                                @await Html.PartialAsync("_AdminHeaderPartial")
                            }
                            else if (User.IsInRole("CONTENT_MANAGER"))
                            {
                                @await Html.PartialAsync("_ContentManagerHeaderPartial")
                            }
                            else
                            {
                                @await Html.PartialAsync("_CustomerHeaderPartial")
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Movies" asp-action="Index">Movies</a>
                            </li>
                        }
                    }
                
                </ul>
                
                <!-- Include the login partial view -->
                @await Html.PartialAsync("_LoginPartial")
                
            </div>
        </div>
    </nav>
</header>