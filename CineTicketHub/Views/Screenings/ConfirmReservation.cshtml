@model CineTicketHub.Models.Entities.Reservation

@{
    ViewBag.Title = "Reservation Confirmation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Reservation Confirmed</h2>
                    <p class="card-text">Thank you for reserving seats for: @Model.Screening.Movie.Title</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Reservation Details</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Movie:</dt>
                        <dd class="col-sm-8">@Model.Screening.Movie.Title</dd>

                        <dt class="col-sm-4">Date and Time:</dt>
                        <dd class="col-sm-8">@Model.Screening.StartsAt.ToString("dd/MM/yyyy, HH:mm")</dd>

                        <dt class="col-sm-4">Room:</dt>
                        <dd class="col-sm-8">@Model.Screening.Room.Name</dd>

                        <dt class="col-sm-4">Reserved Seats:</dt>
                        <dd class="col-sm-8">@Model.NumOfSeats</dd>
                    </dl>

                    <p class="card-text">Your reservation has been confirmed. Enjoy the movie!</p>
                </div>
            </div>
        </div>
    </div>
</div>


<p><a href="@Url.Action("Index", "Movies")">Back to Movies</a></p>